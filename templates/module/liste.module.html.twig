{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}

<div class="container">
<nav class="navbar navbar-light pb-2 bg-secondary">
  <a class="navbar-brand" href="">{{titre}}</a>
</nav>
</div>

<table class="table  table-bordered table-hover table-light text-center" >
        <thead class="table bg-dark text-white">
            <tr>
                <th scope="col">N°</th>
                <th scope="col">Nom Module</th>
               
                <th scope="col">Actions</th>
            </tr>
        </thead>
  <tbody>
  {% set i = 0 %}
{% for module in modules %}
    <tr>
      <td> {% set i = i + 1 %}{{ i }}</td>
      <td>{{ module.libelle }}</td>
    
      
      <td> 
      <button type="button" class="btn btn-outline-success">Détails</button>
        <button type="button" class="btn btn-outline-dark">Modifier</button>
        <a  class="btn btn-outline-danger" href="">Archiver</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
